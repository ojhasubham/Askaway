<!--begin::Main-->
<div class="d-flex flex-column flex-root login-container">
  <!--begin::Login-->
  <div class="login login-3 d-flex flex-column flex-lg-row flex-row-fluid bg-white" id="kt_login">
    <!--begin::Aside-->
    <div class="login-aside d-none d-lg-flex flex-row-auto bgi-size-cover bgi-no-repeat p-10 p-lg-20"></div>
    <div class="login-aside login-aside-custom d-flex flex-row-auto bgi-size-cover bgi-no-repeat p-10 p-lg-20"
      style="background-image: url(/media/bg/bg-4.jpg);">
      <!--begin: Aside Container-->
      <div class="d-flex flex-row-fluid flex-column justify-content-between">
        <!--begin: Aside header-->
        <a href="/" class="flex-column-auto mt-5">
          <img src="/media/logos/asknanswr-logo.png" class="max-h-70px" alt="" />
        </a>
        <!--end: Aside header-->
        <!--begin: Aside content-->
        <div class="flex-column-fluid d-flex flex-column justify-content-center">
          <h3 class="font-size-h1 mb-5 text-white">Welcome to Asknanswr!</h3>
          <p class="font-weight-lighter text-white opacity-80">The ultimate place to get your answers straight.</p>
        </div>
        <!--end: Aside content-->
        <!--begin: Aside footer for desktop-->
        <div class="d-none flex-column-auto d-lg-flex justify-content-between mt-10">
          <div class="opacity-70 font-weight-bold text-white">© 2021 Asknanswr</div>
          <div class="d-flex">
            <a href="http://www.asknanswer.com/privacy" class="text-white">Privacy</a>
            <a href="http://www.asknanswer.com/legal" class="text-white ml-10">Legal</a>
            <a href="http://www.asknanswer.com/contact" class="text-white ml-10">Contact</a>
          </div>
        </div>
        <!--end: Aside footer for desktop-->
      </div>
      <!--end: Aside Container-->
    </div>
    <!--begin::Aside-->
    <!--begin::Content-->
    <div class="flex-row-fluid d-flex flex-column position-relative p-7 overflow-hidden">
      <!--begin::Content header-->
      <div
        class="position-absolute top-0 right-0 text-right mt-5 mb-15 mb-lg-0 flex-column-auto justify-content-center py-5 px-10">
        <span class="font-weight-bold text-dark-50" id="kt_login_signup_title">Don't have an account yet?</span>
        <a href="/auth/signup" class="font-weight-bold ml-2" id="kt_login_signup_a">Sign Up!</a>
      </div>
      <!--end::Content header-->
      <!--begin::Content body-->
      <div class="d-flex flex-column-fluid flex-center mt-30 mt-lg-0">
        <!--begin::Signin-->
        <div class="login-form login-signin">
          <div class="text-center mb-10 mb-lg-20">
            <h3 class="font-size-h1">Sign In</h3>
            <p class="text-muted font-weight-bold">Enter your email and password</p>
          </div>
          <!--begin::Form-->
          <form class="form" novalidate="novalidate" id="kt_login_signin_form">
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 px-6" type="text" placeholder="Email"
                name="email" autocomplete="off" />
            </div>
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 px-6" type="password" placeholder="Password"
                name="password" autocomplete="off" />
            </div>
            <!--begin::Action-->
            <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
              <a href="javascript:;" class="text-dark-50 text-hover-primary my-3 mr-2" id="kt_login_forgot">Forgot
                Password ?</a>
            </div>
            <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
              <button type="button" id="kt_login_signin_submit"
                class="btn btn-primary font-weight-bold px-9 py-4 my-3">Sign In</button>
              <a href="/auth/google/login" class="btn btn-light-primary font-weight-bolder px-8 py-4 my-3 font-size-lg">
                <span class="svg-icon svg-icon-md">
                  <img src="/media/svg/social-icons/google.svg" width="20" height="20" alt="google">
                </span>Sign in with Google</a>
            </div>
            <!--end::Action-->
          </form>
          <!--end::Form-->
        </div>
        <!--end::Signin-->
        <!--begin::Signup-->
        <div class="login-form login-signup">
          <div class="text-center mb-10 mb-lg-20">
            <h3 class="font-size-h1">Sign Up</h3>
            <p class="text-muted font-weight-bold">as <span id="signup_role">User</span></p>
            <p class="text-muted font-weight-bold">Enter your details to create your account</p>
          </div>
          <!--begin::Form-->
          <form class="form" novalidate="novalidate" id="kt_login_signup_form">
            <input type="hidden" name="role" autocomplete="off" value="<%= ROLES.STUDENT%>" />
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 px-6" type="text" placeholder="First name"
                name="first_name" autocomplete="off" />
            </div>
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 px-6" type="text" placeholder="Last name"
                name="last_name" autocomplete="off" />
            </div>
            <div class="form-group d-grid">
              <label for="country">Country</label>
              <select class="form-control" id="country" name="country">
                <option value="" disabled selected>Select country</option>
              </select>
            </div>
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 pr-6" type="tel" placeholder="mobile number"
                maxlength="10" id="phone" name="phone" autocomplete="off" />
            </div>
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 px-6" type="email" placeholder="Email"
                name="nemail" autocomplete="off" />
            </div>
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 px-6" type="password" placeholder="Password"
                name="npassword" autocomplete="off" />
            </div>
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 px-6" type="password"
                placeholder="Confirm password" name="cpassword" autocomplete="off" />
            </div>
            <div class="form-group d-flex flex-wrap flex-center">
              <button type="button" id="kt_login_signup_submit"
                class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4">Submit</button>
              <button type="button" id="kt_login_signup_cancel"
                class="btn btn-light-primary font-weight-bold px-9 py-4 my-3 mx-4">Cancel</button>
            </div>
            <div class="form-group d-flex flex-wrap flex-center">
              <button type="button" id="signup_with_google"
                class="btn btn-light-primary font-weight-bolder px-9 py-4 my-3">
                <!-- <span class="svg-icon svg-icon-md"> -->
                  <img src="/media/svg/social-icons/google.svg" width="20" height="20" alt="google">
                <!-- </span> -->
                Sign up with Google
              </button>
              <button type="button" id="signup_with_facebook"
              class="btn btn-light-primary font-weight-bolder px-4 py-4 my-3">
              <!-- <span class="svg-icon svg-icon-lg"> -->
                <img src="/media/svg/social-icons/facebook.svg" width="20" height="20" alt="facebook">
              <!-- </span> -->
              Sign up with Facebook
            </button>

            </div>
          </form>
          <!--end::Form-->
        </div>
        <!--end::Signup-->
        <!--begin::Forgot-->
        <div class="login-form login-forgot">
          <div class="text-center mb-10 mb-lg-20">
            <h3 class="font-size-h1">Forgotten Password ?</h3>
            <p class="text-muted font-weight-bold">Enter your email to reset your password</p>
          </div>
          <!--begin::Form-->
          <form class="form" novalidate="novalidate" id="kt_login_forgot_form">
            <div class="form-group">
              <input class="form-control form-control-solid h-auto py-5 px-6" type="email" placeholder="Email"
                name="fp_email" autocomplete="off" />
            </div>
            <div class="form-group d-flex flex-wrap flex-center">
              <button type="button" id="kt_login_forgot_submit"
                class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4">Submit</button>
              <button type="button" id="kt_login_forgot_cancel"
                class="btn btn-light-primary font-weight-bold px-9 py-4 my-3 mx-4">Cancel</button>
            </div>
          </form>
          <!--end::Form-->
        </div>
        <!--end::Forgot-->
      </div>
      <!--end::Content body-->
      <!--begin::Content footer for mobile-->
      <div
        class="d-flex d-lg-none flex-column-auto flex-column flex-sm-row justify-content-between align-items-center mt-5 p-5">
        <div class="text-dark-50 font-weight-bold order-2 order-sm-1 my-2">© 2021 asknanswr</div>
        <div class="d-flex order-1 order-sm-2 my-2">
          <a href="http://www.asknanswer.com//privacy" class="text-white">Privacy</a>
          <a href="http://www.asknanswer.com//legal" class="text-white ml-10">Legal</a>
          <a href="http://www.asknanswer.com/contact" class="text-white ml-10">Contact</a>
        </div>
      </div>
      <!--end::Content footer for mobile-->
    </div>
    <!--end::Content-->
  </div>
  <!--end::Login-->
</div>
<!--end::Main-->
